# ============================================================================
# RELAY - Environment Configuration
# Copy this file to .env and update values as needed
# ============================================================================

# Region
REGION=us-west

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/relay_us_west"
DATABASE_URL_EU="postgresql://postgres:postgres@localhost:5433/relay_eu_west"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_URL_EU="redis://localhost:6380"

# MinIO/S3
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_USE_SSL="false"
STORAGE_URL="http://localhost:9000"

# API Server
PORT=3001
NODE_ENV=development

# Auth
JWT_SECRET="relay-dev-secret-change-in-production-must-be-at-least-32-chars"

# CORS
CORS_ORIGIN="http://localhost:3000"

# App URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Next.js Web App
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Email - Resend (production)
RESEND_API_KEY=""
EMAIL_FROM="Relay <noreply@relay.dev>"

# Email - SMTP (optional, for local dev with Mailhog)
# SMTP_HOST="localhost"
# SMTP_PORT="1025"

# Logging
LOG_LEVEL="debug"

# Feature Flags
ENABLE_AI_FEATURES="true"

# External Integrations (optional)
# LINEAR_CLIENT_ID=""
# LINEAR_CLIENT_SECRET=""
# SLACK_CLIENT_ID=""
# SLACK_CLIENT_SECRET=""
# OPENAI_API_KEY=""
