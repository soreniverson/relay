{
  "name": "@relay/api",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./routers": {
      "types": "./src/routers/index.ts",
      "default": "./dist/routers/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' || true",
    "test": "vitest run",
    "test:unit": "vitest run --dir src/__tests__/unit",
    "test:integration": "vitest run --dir src/__tests__/integration",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@relay/shared": "workspace:*",
    "@trpc/server": "^10.45.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "minio": "^7.1.3",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.8",
    "opentelemetry-instrumentation-fetch-node": "^1.1.0",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "resend": "^6.9.1",
    "stripe": "^20.3.0",
    "superjson": "^2.2.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.41",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@types/qs": "^6.9.11",
    "@types/ws": "^8.5.10",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.8.0",
    "supertest": "^6.3.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
