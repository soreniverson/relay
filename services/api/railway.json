{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "services/api/**",
      "packages/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "pnpm db:migrate && pnpm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
